<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/px800"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup"
        android:orientation="vertical"
        android:padding="@dimen/px20">

        <kr.co.theunify.wear.view.FontTextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px50"
            android:layout_marginTop="@dimen/px10"
            android:text="Good!"
            android:textColor="@color/titlecolor"
            android:textSize="@dimen/px60"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px10"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/px10"
            android:minHeight="@dimen/px300"
            android:paddingTop="@dimen/px60"
            android:paddingBottom="@dimen/px60"
            android:text="Good!"
            android:textColor="@color/context"
            android:textSize="@dimen/px46" />

        <LinearLayout
            android:id="@+id/layout_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px160"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/px20">

            <kr.co.theunify.wear.view.FontTextView
                android:id="@+id/txt_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginRight="@dimen/px10"
                android:layout_weight="1"
                android:background="@drawable/selector_popup_cancel"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/selector_popup_cancel_txt"
                android:textSize="@dimen/px46"
                app:clickable="true" />

            <kr.co.theunify.wear.view.FontTextView
                android:id="@+id/txt_ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px10"
                android:layout_marginRight="@dimen/px10"
                android:layout_weight="1"
                android:background="@drawable/selector_popup_ok"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/ok"
                android:textColor="@drawable/selector_popup_ok_txt"
                android:textSize="@dimen/px46"
                app:clickable="true" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>