<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/px50"
        android:paddingRight="@dimen/px50"
        android:soundEffectsEnabled="false">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/px90"
            android:layout_height="@dimen/px90"
            android:layout_centerVertical="true"
            android:background="@drawable/top_back_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/px322"
            android:layout_height="@dimen/px127"
            android:layout_centerInParent="true"
            android:background="@drawable/top_logo"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="지갑추가"
            android:textColor="#353535"
            android:textSize="@dimen/px80"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_search"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_search_icon"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="@dimen/px100"
            android:layout_height="@dimen/px100"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/top_setting_icon"
            android:visibility="gone"/>


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="#aaaaaa" />
</LinearLayout>